<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="basicApplication.dataClass">

	<class name="CountryHibernate" table="country">
		<id name="name" type="string" column="name">
			<!-- <generator class="increment"></generator> -->
		</id>
		<property name="continent" type="string" column="continent" />
		<property name="population" type="integer" column="population" />
		
		<set name="cities" table="city_country">
			<key column="country" />
			<one-to-many class="CityHibernate" />
		</set>
		
	</class>

</hibernate-mapping>