<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="basicApplication.dataClass">

	<class name="CityHibernate" table="city">
		<id name="cityID" type="integer" column="CITY_ID">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="string" column="NAME" />
		<property name="country" type="string" column="COUNTRY" />
		<property name="population" type="integer" column="POPULATION" />
		
		<one-to-one name="city"></one-to-one> 
		
	</class>

</hibernate-mapping>